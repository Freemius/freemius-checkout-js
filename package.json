{
  "name": "@freemius/checkout",
  "private": false,
  "description": "Zero-dependency TypeScript SDK to embed Freemius Checkout in SaaS apps: secure buy button, user_token prefill, trials, coupons, multi-currency, i18n, callbacks. ESM/CJS.",
  "version": "1.3.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "eslint ./src",
    "typecheck": "tsc --noEmit",
    "build:module": "vite build --config vite.module.config.ts",
    "build:global": "vite build --config vite.global.config.ts",
    "build:adapter": "vite build --config vite.adapter.config.ts",
    "build:lib": "npm run build:module && npm run build:global && npm run build:adapter",
    "deploysite": "npm run build && netlify deploy --dir=dist --prod",
    "prepublish": "npm run build:lib",
    "test": "jest",
    "prepare": "ts-patch install -s && husky && npm run build:lib",
    "prettier:check": "prettier --check ./src ./tests ./cypress",
    "prettier:write": "prettier --write ./src ./tests ./cypress"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@microsoft/api-extractor": "^7.52.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/cypress-dotenv": "^2.0.3",
    "@types/jest": "^30.0.0",
    "ajv": "^8.17.1",
    "axe-core": "^4.10.3",
    "cypress": "^14.5.4",
    "cypress-axe": "^1.6.0",
    "cypress-dotenv": "^3.0.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-ts-auto-mock": "^2.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-auto-mock": "^3.7.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "unplugin-dts": "^1.0.0-beta.6",
    "vite": "^7.1.1"
  },
  "license": "MIT",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "main": "./lib/module/checkout.cjs",
  "module": "./lib/module/checkout.js",
  "types": "./lib/module/checkout.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/module/checkout.d.ts",
        "default": "./lib/module/checkout.js"
      },
      "require": {
        "types": "./lib/module/checkout.d.ts",
        "default": "./lib/module/checkout.cjs"
      }
    }
  },
  "author": {
    "name": "Freemius Inc",
    "email": "contact@freemius.com",
    "url": "https://freemius.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Freemius/freemius-checkout-js.git"
  },
  "keywords": [
    "freemius",
    "wordpress",
    "checkout"
  ],
  "homepage": "https://freemius.com/help/documentation/selling-with-freemius/freemius-checkout-buy-button/",
  "bugs": "https://github.com/Freemius/freemius-checkout-js/issues",
  "type": "module"
}
